<scxml datamodel="web-prolog" initial="s">
   <datamodel>
   
      s(Sem) --> np(X), vp(X^Sem).

      np(Sem) --> pn(Sem).

      vp(Sem) --> iv(Sem).
      vp(Sem) --> tv(X^Sem), np(X).

      pn(l) --> [lassie].
      pn(g) --> [garfield].
 
      iv(X^sleep(X)) --> [slept].
      tv(Y^X^chase(X,Y)) --> [chased]. 
   
   </datamodel>
   <state id="s">
      <go on="input(Input)" if="s(Sem,Input,[])">
        writeln(Sem)
      </go>
   </state>
</scxml>